# ===========================================
# Financial Recording Bot - Environment Config
# ===========================================
# Copy this file to .env and fill in your values

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Sheets Configuration
# Spreadsheet ID is in the URL: https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_SHEET_NAME=Sheet1

# Path to Google Service Account JSON file
# Download from: Google Cloud Console > IAM & Admin > Service Accounts
SERVICE_ACCOUNT_FILE=service_account.json

# Optional: Groq API Key (for faster audio transcription)
# Get from: https://console.groq.com/
# GROQ_API_KEY=your_groq_api_key_here

# Fonnte - Unofficial Wrapper (Deprecated?)
FONNTE_TOKEN=your_fonnte_token_here

# WuzAPI (Unofficial Hosted API)
# Get from: Your WuzAPI Dashboard (SumoPod)
WUZAPI_DOMAIN=https://wuzapi-xxxxx.sumopod.my.id
WUZAPI_TOKEN=your_wuzapi_token_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Sender access control (optional)
# Comma-separated WhatsApp numbers/user ids
ALLOWED_SENDER_IDS=

# Group pending delegates/admins (optional)
# Delegates can continue other user's session only via reply to the correct prompt.
SESSION_DELEGATE_IDS=

# Group UX tuning (optional)
# Owner fast-follow window (seconds): text first, image follows shortly without reply.
OWNER_FAST_FOLLOW_SECONDS=3
IMAGE_GRACE_SECONDS=5
